module File

openFile :: String -> String -> IO
openFile path mode = do
  let fd = unsafeOpenFile path, mode
  IO{inner: fd}
end

readFile :: Int -> Int -> IO
readFile fd size = do
  let content = unsafeReadFile fd, size
  IO{inner: content}
end

writeFile :: Int -> String -> IO
writeFile fd content = do
  let bytes = unsafeWriteFile fd, content
  IO{inner: bytes}
end

closeFile :: Int -> IO
closeFile fd = do
  unsafeCloseFile fd
  IO{inner: 0}
end
